  body { font-family: Arial, sans-serif; margin: 0; padding: 0; }
  header, footer { background-color: #333; color: white; padding: 1em; text-align: center; }
  nav a { color: white; margin: 0 1em; text-decoration: none; }
  .container { padding: 1em; max-width: 900px; margin: auto; }
  .search-bar { margin-bottom: 1em; }
  .categories button { margin: 0.2em; padding: 0.5em 1em; cursor: pointer; }
  .event-card { border: 1px solid #ddd; padding: 1em; margin: 0.5em 0; border-radius: 5px; }
  .event-category { font-weight: bold; color: #555; }
  .free { color: green; font-weight: bold; }
</style>
